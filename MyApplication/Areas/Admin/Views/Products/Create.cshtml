@model Models.Product

@{
	string title = "افزودن محصول جدید";
	ViewBag.Title = title;
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>
	@title
</h2>

<div class="row">
	@using (Html.BeginForm())
	{
