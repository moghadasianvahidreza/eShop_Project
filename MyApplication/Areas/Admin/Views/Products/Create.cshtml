					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="Create" class="btn btn-default" />
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="panel panel-primary">
				<div class="panel-body">
					تصویر محصول
				</div>
				<div class="panel-footer">Panel footer</div>
			</div>
