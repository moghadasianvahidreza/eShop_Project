@model IEnumerable<ViewModels.ShopCartItemViewModel>

@if (Model.Any())
{
	<section class="border-radius basket-side">
		<header><h3> سبد خرید شما  </h3></header>
		<article>
			<ul>
				@foreach (var item in Model)
				{
					<li>
						<img class="border-radius" src="~/Images/ProductImages/Thumbnail/@item.ImageName">
						<div class="left-basket">
							<a href="">@item.ProductTitle<span class="border-radius"> @item.Count </span></a>
						</div>
					</li>
				}
			</ul>
			<a href="/UserCart" class="show-basket-button border-radius">مشاهده سبد خرید</a>
		</article>
	</section>
}
